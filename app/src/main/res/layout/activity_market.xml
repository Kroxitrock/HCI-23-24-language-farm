<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MarketActivity"
    android:background="@drawable/market">
  <TextView
      android:id="@+id/animalStand"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="230dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      app:layout_constraintStart_toStartOf="@id/animalStand"
      app:layout_constraintTop_toTopOf="@id/animalStand"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:background="@drawable/signpost"
      android:textAlignment="center"
      android:gravity="center"
      android:layout_marginStart="57dp"
      android:layout_marginTop="50dp"
      android:text="@string/animals"
      android:contentDescription="@string/animals_label_dsc"/>
  <TextView
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:background="@drawable/signpost"
      android:textAlignment="center"
      android:gravity="center"
      android:layout_marginStart="250dp"
      android:layout_marginTop="290dp"
      android:text="@string/sell"
      android:contentDescription="@string/sell_sign_dsc"/>
  <TextView
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:background="@drawable/signpost"
      android:textAlignment="center"
      android:gravity="center"
      android:layout_marginStart="76dp"
      android:layout_marginTop="525dp"
      android:text="@string/buildings"
      android:contentDescription="@string/buildings_label_desc"/>
  <TextView
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:background="@drawable/signpost"
      android:textAlignment="center"
      android:gravity="center"
      android:layout_marginStart="236dp"
      android:layout_marginTop="525dp"
      android:text="@string/crops"
      android:contentDescription="@string/crops_label_desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>